<div class="well">
  <div class="row">
    <div class="col-md-8">
      <h4><%= product.name %></h4>
      <p><small><%= product.description %></small></p>
    </div>

    <div class="col-md-4">
      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>

        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1, max: product.stocks %>

          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", :onclick => "alert('Added to cart!')", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>